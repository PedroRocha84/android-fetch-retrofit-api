<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/textView_title"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="100sp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/details_title"
        android:textAlignment="center"
        android:textColor="#952D2D"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Quote Content -->
    <TextView
        android:id="@+id/textView_quote"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="start"
        android:text="@string/inspirational_quote_goes_here"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/textView_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Author -->
    <TextView
        android:id="@+id/textView_author"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="end"
        android:text="@string/text_author"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/textView_quote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tags -->
    <TextView
        android:id="@+id/textView_tags"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/tags_motivation_life"
        android:textSize="14sp"
        android:textColor="#555555"
        app:layout_constraintTop_toBottomOf="@+id/textView_author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Date Added -->
    <TextView
        android:id="@+id/textView_date"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/added_on_2023_01_01"
        android:textSize="14sp"
        android:textColor="#555555"
        app:layout_constraintTop_toBottomOf="@+id/textView_tags"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Length -->
    <TextView
        android:id="@+id/textView_length"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/length_125_characters"
        android:textSize="14sp"
        android:textColor="#555555"
        app:layout_constraintTop_toBottomOf="@+id/textView_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Button -->
    <Button
        android:id="@+id/button_back"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="30sp"
        android:backgroundTint="#ff5a595b"
        android:text="@string/back"
        app:layout_constraintTop_toBottomOf="@+id/textView_length"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
